# --- STYLE N√öT B·∫§M ---
<ModernButton@Button>:
    background_normal: ''
    background_color: (0,0,0,0)
    canvas.before:
        Color:
            rgba: c_primary if self.state == 'normal' else c_btn_press
        RoundedRectangle:
            pos: self.pos
            size: self.size
            radius: [10,]
    bold: True
    color: (1,1,1,1)

# --- STYLE CARD (ƒê√£ s·ª≠a l·ªói missing attribute) ---
<DashboardCard@ButtonBehavior+BoxLayout>:
